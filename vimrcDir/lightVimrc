nnoremap ; :

nnoremap <c-a> ggvG$

nnoremap <s-j> :e input.txt
nnoremap <s-k> :!make 
nnoremap <s-l> :q!
nnoremap <s-r> :make re

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

inoremap jk <esc>
inoremap kj <esc>

set complete+=k
set timeoutlen=20
set splitbelow
set mouse=a
set clipboard=unnamed

set nocompatible 
set expandtab
set number 
set t_ti= t_te=   

set shiftwidth=2 softtabstop=2 tabstop=2 
set nobackup 
set autochdir 
set backupcopy=yes 

set ignorecase smartcase 
set incsearch hlsearch 
set cindent smartindent autoindent
set backspace=indent,eol,start

filetype indent on 
filetype plugin indent on 
