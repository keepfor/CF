nnoremap ; :
nnoremap <s-j> :e input.txt
nnoremap <s-k> :!make 
nnoremap <s-l> :q!
nnoremap <s-r> :make re
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-l> <c-w>l
nnoremap <c-a> ggvG$

inoremap jk <esc>
inoremap kj <esc>
inoremap <up> <c-p>
inoremap <down> <c-n>
inoremap <c-i> <c-p>
inoremap <c-k> <c-n>

set timeoutlen=20
set splitbelow
set mouse=a
set clipboard=unnamed
set nocompatible 
set expandtab
set t_ti= t_te=   
set shiftwidth=2 softtabstop=2 tabstop=2 
set nobackup 
set autochdir 
set backupcopy=yes 
set ignorecase smartcase 
set incsearch hlsearch 
set cindent smartindent autoindent
set backspace=indent,eol,start

filetype plugin indent on 
